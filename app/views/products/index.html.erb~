<h1>Liste des produits</h1>

<table>
  <thead>
    <tr>
      <th>Categorie de produit</th>
      <th>Description du produit</th>
      <th>Commentaire</th>
      <th>Note sur 10</th>
      <th>Prix (en €)</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
      	<% if (current_user.id == product.user) %>
        	<td><%= product.categorie %></td>
        	<td><%= product.description %></td>
        	<td><%= product.commentaire %></td>
        	<td><%= product.note %></td>
        	<td><%= product.prix %>€</td>
        	<td><%= link_to 'Voir', product %></td>
        	<% if current_user.admin? || (current_user.id == product.user) %> |
        		<td><%= link_to 'Modifier', edit_product_path(product) %></td>
        		<td><%= link_to 'Supprimer', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        	<% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

