<h1>Liste des produits</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Categorie</th>
      <th>Description</th>
      <th>Commentaire</th>
      <th>Note</th>
      <th>Prix</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        	<td><%= product.user %></td>
        	<td><%= product.categorie %></td>
        	<td><%= product.description %></td>
        	<td><%= product.commentaire %></td>
        	<td><%= product.note %></td>
        	<td><%= product.prix %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un nouveau produit', new_product_path %>
